<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeerUp IdentityServer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/toastr.css" rel="stylesheet" />
</head>
<body>
    <header>
        <img src="~/img/biere3.jpg" style="
            position: absolute;
            left: 0;
            right: 0;
            margin: -2px;
            margin-top: -4px;
            width: 100%;
            height: 200px;
            object-fit: cover;
            vertical-align: top;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Back">BeerUp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Back">Accueil</a>
                        </li>
                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-light dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Administration
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @if (User.IsInRole("Administrateur"))
                                    {
                                        @Html.ActionLink("Plans tarifaires", "PlansTarifaires", "Home", null, new { @class = "dropdown-item" })
                                        <div class="dropdown-divider"></div>
                                    }
                                    @if (User.IsInRole("Administrateur") || User.IsInRole("GroupAdmin") || User.IsInRole("GroupAchat"))
                                    {
                                        @Html.ActionLink("Achats", "Achats", "Home", null, new { @class = "dropdown-item" })
                                    }
                                    @if (User.IsInRole("Administrateur") || User.IsInRole("GroupAdmin") || (User.IsInRole("GroupAchat") && User.IsInRole("GroupEtablissement")))
                                    {
                                        <div class="dropdown-divider"></div>
                                    }
                                    @if (User.IsInRole("Administrateur") || User.IsInRole("GroupAdmin") || User.IsInRole("GroupEtablissement"))
                                    {
                                        @Html.ActionLink("Etablissements", "Etablissements", "Home", null, new { @class = "dropdown-item" })
                                    }
                                    @if (User.IsInRole("Administrateur") || User.IsInRole("GroupAdmin") || (User.IsInRole("GroupBiere") && User.IsInRole("GroupEtablissement")))
                                    {
                                        <div class="dropdown-divider"></div>
                                    }
                                    @if (User.IsInRole("Administrateur") || User.IsInRole("GroupAdmin") || User.IsInRole("GroupBiere"))
                                    {
                                        @Html.ActionLink("Bières", "Bieres", "Home", null, new { @class = "dropdown-item" })
                                    }
                                    @if (User.IsInRole("Administrateur") || User.IsInRole("GroupAdmin"))
                                    {
                                        <div class="dropdown-divider"></div>
                                        @Html.ActionLink("Utilisateurs", "Index", "AdministrationUsers", null, new { @class = "dropdown-item" })
                                    }
                                </div>
                            </li>
                        }

                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link text-light" })
                        </li>

                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown ml-auto">
                                <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.Claims.FirstOrDefault(x => x.Type.ToString().Equals("name")).Value
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Se déconnecter", "logout", "account", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ml-auto">
                                @Html.ActionLink("S'identifier", "login", "account", null, new { @class = "nav-link text-light" })
                            </li>
                            <li class="nav-item ">
                                @Html.ActionLink("S'enregistrer", "registerweb", "account", null, new { @class = "nav-link text-light" })
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-dark text-muted">
        <div class="container text-white">
            &copy; 2021 - BeerUp - <a asp-area="" class="text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
